{
  "extends": ["airbnb", "prettier"],
  "plugins": ["prettier"],
  "rules": {
    "prettier/prettier": [
      "error",
      {
        "semi": false
      }
    ],
    "react/jsx-no-bind": {
      "ignoreRefs": false
    },
    "global-require": 0,
    "react/no-array-index-key": 0,
    "react/require-default-props": 0,
    "jsx-a11y/no-autofocus": 0,
    "jsx-a11y/label-has-for": 0,
    "no-return-assign": 0,
    "jsx-a11y/click-events-have-key-events": 0,
    "jsx-a11y/no-static-element-interactions": 0,
    "class-methods-use-this": 0,
    "react/prop-types": 0,
    "prefer-destructuring": 0,
    "no-undef": 0,
    "import/no-unresolved": [
      "error",
      {
        "commonjs": true,
        "caseSensitive": true,
        "ignore": ["^sketch(\\/|$)"]
      }
    ]
  },
  "settings": {
    "import/resolver": {
      "babel-plugin-root-import": {}
    }
  },
  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "env": {
    "es6": true,
    "browser": true,
    "node": true
  }
}
